    <packaging>war</packaging>
    <properties>
        <tomcat7-maven-plugin-version>2.1</tomcat7-maven-plugin-version>
        <mybatis.generator.configFile>${basedir}/src/main/resources/maven_build/generatorConfig.xml</mybatis.generator.configFile>

        <mybatis.generator.dbConfigFile>maven_build/01_dev.properties</mybatis.generator.dbConfigFile>

        <mybatis.generator.package.path>com.rongyi.integral</mybatis.generator.package.path>
