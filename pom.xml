        </dependency>


        <dependency>
            <groupId>org.apache.camel</groupId>
            <artifactId>camel-spring</artifactId>
            <version>2.15.3</version>
        </dependency>

        <dependency>
            <groupId>org.javassist</groupId>
            <artifactId>javassist</artifactId>
            <version>3.15.0-GA</version>
        </dependency>
        <dependency>
            <groupId>org.jboss.netty</groupId>
            <artifactId>netty</artifactId>
            <version>3.2.5.Final</version>
        </dependency>


    </dependencies>

    <build>
        <finalName>novel</finalName>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
                <excludes>
                    <exclude>${excludePropertyFiles}</exclude>
                </excludes>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.mybatis.generator</groupId>
                <artifactId>mybatis-generator-maven-plugin</artifactId>
                <version>1.3.2</version>
                <configuration>
                    <verbose>true</verbose>
                    <overwrite>true</overwrite>
                    <configurationFile>${mybatis.generator.configFile}</configurationFile>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>mysql</groupId>
                        <artifactId>mysql-connector-java</artifactId>
                        <version>5.1.26</version>
                    </dependency>
                    <!--<dependency>-->
                    <!--<groupId>com.rongyi</groupId>-->
                    <!--<artifactId>easy-mybatis-generator</artifactId>-->
                    <!--<version>1.0.0-SNAPSHOT</version>-->
                    <!--</dependency>dependency-->
                </dependencies>
            </plugin>
        </plugins>

    </build>


    <profiles>
        <profile>
            <!-- 本地开发环境 -->
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <excludePropertyFiles></excludePropertyFiles>
            </properties>
        </profile>

        <profile>
            <id>test</id>
            <properties>
                <excludePropertyFiles>maven_build/**/*</excludePropertyFiles>
            </properties>
        </profile>
    </profiles>
</project>